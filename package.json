{
	"name": "dora",
	"displayName": "Dora",
	"description": "Support Dora addon development",
	"version": "0.3.0",
	"author": "linroid <linroid@gmail.com>",
	"license": "MIT",
	"publisher": "linroid",
	"engines": {
		"vscode": "^1.30.0"
	},
	"icon": "resources/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/linroid/dora-vscode"
	},
	"homepage": "https://github.com/linroid/dora-vscode/blob/master/README.md",
	"keywords": [
		"Dora"
	],
	"categories": [
		"Other"
	],
	"preview": true,
	"activationEvents": [
		"onDebug",
		"onLanguage:javascript",
		"onLanguage:json",
		"onCommand:dora.setHost",
		"onCommand:dora.pushAddon",
		"onCommand:dora.pullAddon",
		"onCommand:dora.refreshExplorer",
		"onView:dora.addonExplorer"
	],
	"keybindings": [
		{
			"command": "dora.pushAddon",
			"key": "ctrl+shift+r",
			"mac": "cmd+shift+r",
			"when": "editorTextFocus"
		}
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dora.pushAddon",
				"title": "Dora: Push",
				"category": "Dora",
				"icon": {
					"light": "resources/light/push.svg",
					"dark": "resources/dark/push.svg"
				}
			},
			{
				"command": "dora.pullAddon",
				"category": "Dora",
				"title": "Dora: Pull"
			},
			{
				"command": "dora.setHost",
				"category": "Dora",
				"title": "Dora: Set host",
				"icon": {
					"light": "resources/light/phone.svg",
					"dark": "resources/dark/phone.svg"
				}
			},
			{
				"command": "dora.refreshExplorer",
				"category": "Dora",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dora",
					"title": "Dora",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"dora": [
				{
					"id": "dora.addonExplorer",
					"name": "Addons"
				}
			]
		},
		"menus": {
			"editor/title": [
				{
					"command": "dora.pushAddon",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "dora.refreshExplorer",
					"when": "view == dora.addonExplorer",
					"group": "navigation@1"
				},
				{
					"command": "dora.setHost",
					"when": "view == dora.addonExplorer",
					"group": "navigation@2"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Dora configuration",
			"properties": {
				"dora.host": {
					"type": "string",
					"description": "Host for connect Dora"
				},
				"dora.autoPush": {
					"type": "boolean",
					"default": false,
					"description": "Whether to push addon file automatically."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"@types/adm-zip": "^0.4.32",
		"adm-zip": "^0.4.13",
		"fs-extra": "^8.1.0",
		"request": "^2.88.0",
		"request-promise": "^4.2.4",
		"targz": "^1.0.1",
		"tmp": "^0.1.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.0.1",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/request-promise": "^4.1.44",
		"@types/targz": "^1.0.0",
		"@types/tmp": "^0.1.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
